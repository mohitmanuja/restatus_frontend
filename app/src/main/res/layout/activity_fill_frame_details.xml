<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/mainFillFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="@dimen/_11sdp"
                android:src="@drawable/back_img" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/semi_bold"
                android:includeFontPadding="false"
                android:text="Fill frame details"
                android:textColor="@color/header_text_color"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/toolbar"
            android:background="@color/bg_screen" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/semi_bold"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:text="Upload Photo"
                            android:textColor="@color/black1"
                            android:textSize="@dimen/_11sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp">

                            <RelativeLayout
                                android:id="@+id/p_ProfileLay"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_marginStart="@dimen/_13sdp"
                                android:background="@drawable/frame_upload_bg">

                                <LinearLayout
                                    android:id="@+id/ll_upload_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/fill_upload" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:fontFamily="@font/kumbhsans_medium"
                                        android:includeFontPadding="false"
                                        android:lines="1"
                                        android:text="Add photo"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/_9sdp" />

                                </LinearLayout>

                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/p_ProfileLay"
                                android:fontFamily="@font/kumbhsans_medium"
                                android:includeFontPadding="false"
                                android:text="@string/note_please_make_sure_your_photo_should_be_clear_and_hd_quality"
                                android:textColor="@color/gray3"
                                android:textSize="@dimen/_8sdp" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:fontFamily="@font/semi_bold"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:text="Fill details"
                            android:textColor="@color/black1"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:fontFamily="@font/kumbhsans_medium"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:text="Your name"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_9sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_42sdp"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:background="@drawable/frame_edit_text_bg"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/etname"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:fontFamily="@font/kumbhsans_regular"
                                android:hint="Enter your name"
                                android:imeOptions="actionNext"
                                android:includeFontPadding="false"
                                android:inputType="text"
                                android:paddingStart="@dimen/_16sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:textColor="@color/text_color"
                                android:textColorHint="#C7C7C7"
                                android:textCursorDrawable="@drawable/custom_cursor"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:fontFamily="@font/kumbhsans_medium"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:text="Designation"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_9sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_42sdp"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:background="@drawable/frame_edit_text_bg"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/etDesignation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:fontFamily="@font/kumbhsans_regular"
                                android:hint="Enter your designation"
                                android:imeOptions="actionNext"
                                android:includeFontPadding="false"
                                android:inputType="text"
                                android:paddingStart="@dimen/_16sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:textColor="@color/text_color"
                                android:textColorHint="#C7C7C7"
                                android:textCursorDrawable="@drawable/custom_cursor"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:fontFamily="@font/kumbhsans_medium"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:text="Phone number"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_9sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:background="@drawable/frame_edit_text_bg"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/etMobile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:fontFamily="@font/kumbhsans_regular"
                                android:hint="Enter you mobile number"
                                android:imeOptions="actionNext"
                                android:includeFontPadding="false"
                                android:inputType="phone"
                                android:maxLength="15"
                                android:paddingStart="@dimen/_16sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:textColor="@color/text_color"
                                android:textColorHint="#C7C7C7"
                                android:textCursorDrawable="@drawable/custom_cursor"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:fontFamily="@font/kumbhsans_medium"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:text="Address"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_9sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:background="@drawable/frame_edit_text_bg"
                            android:visibility="visible">

                            <EditText
                                android:id="@+id/p_Et_Address"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:fontFamily="@font/kumbhsans_regular"
                                android:gravity="start"
                                android:hint="Enter your address"
                                android:imeOptions="actionNext"
                                android:includeFontPadding="false"
                                android:maxLines="3"
                                android:paddingStart="@dimen/_16sdp"
                                android:paddingTop="@dimen/_11sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:textColor="@color/text_color"
                                android:textColorHint="#C7C7C7"
                                android:textCursorDrawable="@drawable/custom_cursor"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/kumbhsans_medium"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:text="Social Media Info"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_9sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:layout_marginBottom="@dimen/_80sdp"
                            android:background="@drawable/frame_edit_text_bg"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/etSocialMedia"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:fontFamily="@font/kumbhsans_regular"
                                android:hint="Enter you username"
                                android:imeOptions="actionDone"
                                android:includeFontPadding="false"
                                android:inputType="text"
                                android:paddingStart="@dimen/_16sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:textColor="@color/text_color"
                                android:textColorHint="#C7C7C7"
                                android:textCursorDrawable="@drawable/custom_cursor"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <TextView
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/background_02"
                    android:fontFamily="@font/kumbhsans_medium"
                    android:foreground="@drawable/bg_ripple_squre"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!--<include
            android:id="@+id/shimmer_greetings"
            layout="@layout/placeholder_all_greetings2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:visibility="visible" />-->

        <include
            android:id="@+id/no_data_layout"
            layout="@layout/no_data_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:visibility="gone" />

        <include
            android:id="@+id/no_internet_layout"
            layout="@layout/no_data_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:visibility="gone" />

    </RelativeLayout>

</layout>
