<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="@string/str_26"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_13sdp"
                        android:background="@drawable/background_07"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ep_business_category_img" />

                        <EditText
                            android:id="@+id/b_Et_Category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/kumbhsans_regular"
                            android:hint="@string/str_27"
                            android:imeOptions="actionNext"
                            android:includeFontPadding="false"
                            android:inputType="text"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:textColor="@color/text_color"
                            android:textColorHint="#61001e2f"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_13sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="Business Name"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="*"
                        android:textColor="@color/g3"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:background="@drawable/background_07"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ep_business_name_img" />

                    <EditText
                        android:id="@+id/etBusinessName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/kumbhsans_regular"
                        android:hint="Business Name"
                        android:imeOptions="actionNext"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#61001e2f"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_13sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="About Business"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="*"
                        android:textColor="@color/g3"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:background="@drawable/background_07"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ep_name_img" />

                    <EditText
                        android:id="@+id/etBusinessDesignation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/kumbhsans_regular"
                        android:hint="About Business"
                        android:imeOptions="actionDone"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#61001e2f"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_13sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="Business Logo"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="*"
                        android:textColor="@color/g3"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/b_ProfileLay"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/background_08">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/upload_img" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/kumbhsans_medium"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:text="Upload"
                            android:textColor="#611c162e"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/b_ProfileImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:visibility="gone"
                        app:riv_corner_radius="@dimen/_10sdp"
                        app:riv_mutate_background="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_13sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="Business Address"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="*"
                        android:textColor="@color/g3"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:background="@drawable/background_07">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ep_address_img" />

                    <EditText
                        android:id="@+id/etBusinessAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@null"
                        android:fontFamily="@font/kumbhsans_regular"
                        android:gravity="start"
                        android:hint="Your Address"
                        android:imeOptions="actionNext"
                        android:includeFontPadding="false"
                        android:minHeight="@dimen/_70sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_11sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#61001e2f"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/sub_bg_color"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="Social Media"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_13sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="WhatsApp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="*"
                        android:textColor="@color/g3"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:background="@drawable/background_07"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ep_whatsapp_img" />

                    <EditText
                        android:id="@+id/etContact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/kumbhsans_regular"
                        android:hint="WhatsApp"
                        android:imeOptions="actionNext"
                        android:includeFontPadding="false"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#61001e2f"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b_Lay_ChangeSocialMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/b_Txt_SocialMedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsans_medium"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="Instagram"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ep_arrow_down_img" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_150sdp"
                    android:background="@drawable/background_07"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/b_Img_SocialMedia"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ep_instagram_img" />

                    <EditText
                        android:id="@+id/etBusinessSocialMedia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/kumbhsans_regular"
                        android:hint="Instagram Id"
                        android:imeOptions="actionDone"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#61001e2f"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/updateTxt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/background_01"
            android:fontFamily="@font/kumbhsans_medium"
            android:foreground="@drawable/bg_ripple_squre"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lines="1"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />
    </LinearLayout>

</layout>