<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:tag="layout/dialog_download_file_0">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_18sdp"
        app:cardElevation="0.100000024dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_25sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:text="Save Changes"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_18sdp"
                android:visibility="gone" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_back"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="-20dp"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_fileName="backpress1.json"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:includeFontPadding="true"
                android:lineSpacingExtra="1.2dp"
                android:text="Do you want to exit ?"
                android:textAlignment="center"
                android:textColor="@color/black1"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/cancelBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_bg"
                    android:backgroundTint="@color/continue_bg"
                    android:fontFamily="@font/kumbhsans_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="@dimen/_14sdp"
                    android:paddingVertical="@dimen/_13sdp"
                    android:text="Cancel"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/discardBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_bg"
                    android:fontFamily="@font/semi_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="@dimen/_14sdp"
                    android:paddingVertical="@dimen/_13sdp"
                    android:text="Exit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
