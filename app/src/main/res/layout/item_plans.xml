<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/plan_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@drawable/selected_border"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_20sdp">

            <TextView
                android:id="@+id/plan_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kumbhsans_medium"
                android:text="365 Days Plan"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/discount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/kumbhsans_medium"
                    android:text="₹299"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/priceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/discount_price"
                    android:fontFamily="@font/kumbhsans_medium"
                    android:text="₹999"
                    android:textColor="@color/gray_2"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/price_per_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/priceTv"
                    android:layout_marginStart="@dimen/_28sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/kumbhsans_regular"
                    android:text="₹0.82 Per day"
                    android:textColor="@color/gray_2"
                    android:textSize="@dimen/_6sdp" />


                <View
                    android:id="@+id/cut_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignStart="@+id/priceTv"
                    android:layout_alignEnd="@+id/priceTv"
                    android:layout_marginStart="-2dp"
                    android:layout_marginEnd="-2dp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@color/gray_3" />

            </RelativeLayout>


        </LinearLayout>



    </RelativeLayout>
</layout>